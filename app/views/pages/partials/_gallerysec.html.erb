<div class="m-cont">
  <h1 class="section-title animation-element slide-left">Photo gallery</h1>

  <!-- center elements -->
  <div class="main-container">
    <div class="fixer-container">
      <!-- first two figures -->
      <div class = figures>

        <!-- figure 1: indoor -->
        <figure class="thumb-photos animation-element slide-left">
          <!-- thumb image -->
           <img src="<%= asset_path('in0.jpg')%>">
          <!-- thumb text link -->
          <div>
            <a href="#" data-toggle="modal" data-target="#myModalIndoor" ><p class="left-icon">Indoor</p></a>
          </div>
        </figure>


        <!-- figure 2: outdoor -->
        <figure class="thumb-photos animation-element slide-left">
          <!-- thumb image -->
          <img src="<%= asset_path('out0.jpg')%>">
          <!-- thumb text link -->
          <div>
            <a href="#" data-toggle="modal" data-target="#myModalOutdoor"><p class="left-icon">Outdoor</p></a>
          </div>      
        </figure>

      </div>

      <!-- figure 3: birthdays -->
    <div class = figures>
    <figure class="thumb-photos animation-element slide-left">
      <!-- thumb image -->
      <img src="<%= asset_path('b0.jpg')%>">
      <!-- thumb text link -->
      <div>
        <a href="#" data-toggle="modal" data-target="#myModalBirthday" ><p class="left-icon">Birthdays</p></a>
      </div>      
    </figure>

    <!-- figure 4: graduations -->
    <figure class="thumb-photos animation-element slide-left">
      <!-- thumb image -->
      <img src="<%= asset_path('g0.jpg')%>">
      <!-- thumb text link -->
      <div>
        <a href="#" data-toggle="modal" data-target="#myModalGraduation"><p class="left-icon">Graduations</p></a>
      </div>      
    </figure>
    </div>


    </div>
  </div>

</div>

<!-- trigger modal for figure 1: indoor -->
<div class="modal fade" id="myModalIndoor" role="dialog">
  <div class="modal-dialog">
    <!-- render carsoul (modal content) -->
    <%= render "pages/partials/modal-partials/indoor-partial" %>
  </div>
</div>

<!-- trigger modal for figure 1: outdoor -->
<div class="modal fade" id="myModalOutdoor" role="dialog">
  <div class="modal-dialog">
    <!-- render carsoul (modal content) -->
    <%= render "pages/partials/modal-partials/outdoor-partial" %>
  </div>
</div>

<!-- trigger modal for figure 1: birthday -->
<div class="modal fade" id="myModalBirthday" role="dialog">
  <div class="modal-dialog">
    <!-- render carsoul (modal content) -->
    <%= render "pages/partials/modal-partials/birthday-partial" %>
  </div>
</div>

<!-- trigger modal for figure 1: indoor -->
<div class="modal fade" id="myModalGraduation" role="dialog">
  <div class="modal-dialog">
    <!-- render carsoul (modal content) -->
    <%= render "pages/partials/modal-partials/graduation-partial" %>
  </div>
</div>

